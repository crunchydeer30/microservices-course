    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "^6.4.15",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
